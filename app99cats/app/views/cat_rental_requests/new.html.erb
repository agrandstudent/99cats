<h1>Submit a Cat Request</h1>

<form action="<%= cat_rental_requests_url %>" method="post" accept-charset="utf-8">
  <label for="cat">Cat</label>
  <select name="cat_rental_request[cat_id]" id="cat">
    <option value="">-- Select a cat --</option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br>
  <label for="start_date">Start date</label>
  <input type="date" name="cat_rental_request[start_date]" id="start_date" value="<%= @catrental.start_date %>">
  <br>
  <label for="end_date">End date</label>
  <input type="date" name="cat_rental_request[end_date]" id="end_date" value="<%= @catrental.end_date %>">
  <br>

  <p><input type="submit" value="Submit Cat Request"></p>
</form>