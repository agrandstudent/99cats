<h1><%= @cat.name %></h1>

<h2>Information</h2>

<table>
  <tr>
    <td><b>Age</b></td>
    <td><b>Color</b></td>
    <td><b>Sex</b></td>
  </tr>
  <tr>
    <td><%= @cat.age %></td>
    <td><%= @cat.color%></td>
    <td><%= @cat.sex %></td>
  </tr>
</table>

<h2>Requests</h2>

<table>
  <tr>
    <td><b>Status</b></td>
    <td><b>Start Date</b></td>
    <td><b>End Date</b></td>
  </tr>
  <% @catrental.each do |request| %>
  <tr>
    <td><%= request.status %></td>
    <td><%= request.start_date%></td>
    <td><%= request.end_date %></td>
  </tr>
  <% end %>
</table>

<%= link_to "Edit cat", edit_cat_url %>
<%= link_to "Back to cats", cats_url %>
<%= link_to "Request cat", new_cat_rental_request_url %>